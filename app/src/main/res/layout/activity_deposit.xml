<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deposit"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bgi4"
    tools:context=".Deposit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="20dp"
        android:alpha="0.9">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="serif"
            android:gravity="left"
            android:text="@string/balance_with_colon"
            android:textColor="@color/cb_dark_grey"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView1"
            android:fontFamily="serif"
            android:layout_toRightOf="@+id/textView1"
            android:contentDescription="balance display"
            android:gravity="left"
            android:text="000"
            android:textColor="@color/light_blue"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="36dp"
            android:fontFamily="serif"

            android:layout_alignLeft="@+id/textView1"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="Choose:" />

        <Spinner
            android:id="@+id/choice"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:fontFamily="serif"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView1"
            android:fontFamily="serif"

            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="Account:" />

        <EditText
            android:id="@+id/account_info"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView3"
            android:layout_alignTop="@+id/textView6"
            android:fontFamily="serif"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/textView6"
            android:gravity="left"
            android:inputType="number"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/account_info"
            android:layout_alignLeft="@+id/textView1"
            android:layout_marginStart="0dp"
            android:fontFamily="serif"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="Amount:" />

        <EditText
            android:id="@+id/amount_input"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_alignBottom="@+id/textView5"
            android:fontFamily="serif"
            android:layout_toRightOf="@+id/textView5"
            android:gravity="center"
            android:inputType="numberDecimal" />


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/thirdpartypay_btn"
            android:layout_alignBottom="@id/thirdpartypay_btn"
            android:layout_alignRight="@+id/amount_input"
            android:text="DEPOSIT" />

        <Button
            android:id="@+id/thirdpartypay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView1"
            android:layout_marginBottom="0dp"
            android:text="WeChat/Alipay" />


    </RelativeLayout>








</RelativeLayout>