<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <TextView
        android:id="@+id/txtViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewUserProfile"
        android:layout_toRightOf="@+id/imageViewUserProfile"
        android:layout_marginLeft="50dp"
        android:textSize="24sp" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewUserProfile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/profileimage" />


    <TextView
        android:id="@+id/txtViewMoneyLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtViewUserName"
        android:layout_alignBottom="@id/txtLabelMoney"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtLabelMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewUserProfile"
        android:layout_below="@+id/imageViewUserProfile"
        android:layout_marginTop="30dp"
        android:text="@string/txtMoneyleft"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSeeRequest"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txtLabelMoney"
        android:layout_marginTop="50dp"
        android:text="@string/txtSeeRequest" />



    <Button
        android:id="@+id/btnSeeChat"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btnSeeRequest"
        android:layout_alignLeft="@+id/btnSeeRequest"
        android:layout_alignRight="@+id/btnSeeRequest"
        android:text="@string/txtSeeChat" />


</RelativeLayout>